%section.header-11-sub
  .background &nbsp;
  .container
    .row
      .col-sm-4
        %h3 The Dating Site for Ruby Experts
        %p CoderDating is the first dating website just for experienced Ruby on Rails engineers.
        .signup-form
          = form_for(User.new) do |f|
            .form-group
              = f.text_field 'email', class: 'form-control', placeholder: 'Your E-mail'
            .form-group
              = f.text_field 'name', class: 'form-control', placeholder: 'Name'
            .form-group
              .half-width
                = f.password_field 'password', class: 'form-control', placeholder: 'Password'
              .half-width
                = f.password_field 'password_confirmation', class: 'form-control', placeholder: 'Confirmation'
            .form-group
              = f.submit 'Sign Up', class: 'btn btn-block btn-info'
        .additional-links
          By signing up you agree to
          %a{:href => "#"} Terms of Use
          and
          %a{:href => "#"} Privacy
      .col-sm-7.col-sm-offset-1.player-wrapper
        .player
          = image_tag 'hero'